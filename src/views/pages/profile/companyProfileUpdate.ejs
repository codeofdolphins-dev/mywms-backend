<div>
    <div class="card alert">
        <div class="card-header">
            <h4>Edit Company Details</h4>
        </div>
        <div class="card-body">
            <div class="basic-form">
                <form method="post" id="companyDetailsForm" enctype="multipart/form-data">
                    <input type="text" id="id" name="id" hidden 
                        <% if ( Object.keys(data).length !=0 ) { %>
                            value="<%- data.id %>"
                        <% } %>
                    >
                    <div class="form-group">
                        <label>Company Name</label>
                        <input type="text" id="c_name" name="c_name" class="form-control" placeholder="Company Name" required 
                            <% if ( Object.keys(data).length !=0 ) { %>
                                value="<%- data.c_name %>"
                            <% } %>
                        >
                    </div>

                    <div class="form-group">
                        <label>Company Image</label>
                        <input type="file" id="image" name="image" class="form-control-file" accept="image/*">
                    </div>

                    <div class="form-group">
                        <label>Company Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Company Email" <% if
                            (data) { %>
                        value="<%- data.email %>"
                            <% } %>
                                >
                    </div>

                    <div class="form-group">
                        <label>Phone Number</label>
                        <input type="number" id="ph_no" name="ph_no" class="form-control" placeholder="Phone Number" <%
                            if (data) { %>
                        value="<%- data.ph_no %>"
                            <% } %>
                                >
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" id="pass" name="pass" class="form-control" placeholder="Password">
                    </div>
                    
                    <div class="form-group" id="c_passHeader">
                        <label>Confirm Password</label>
                        <input type="password" id="c_pass" name="c_pass" class="form-control" placeholder="Confirm Password">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>