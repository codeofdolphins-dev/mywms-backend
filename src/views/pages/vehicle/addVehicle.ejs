<div class="w-100 mt-5">
  <div class="card shadow border-0">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0">
        <% if (Object.keys(data).length === 0) { %>
          Add Vehicle
        <% } else { %>
          Edit Vehicle Details
        <% } %>
      </h4>
    </div>

    <form 
      method="post" 
      id="addVehicle" 
      class="needs-validation" 
      novalidate
      <% if (Object.keys(data).length != 0) { %>
        action="/vehicle/editVehicle"
      <% } %>
    >
      <div class="card-body">
        <div class="row g-3">

          <!-- Vehicle Number -->
          <div class="col-md-6">
            <label for="v_number" class="form-label">Vehicle Number</label>
            <input 
              type="text" 
              id="v_number" 
              name="v_number" 
              class="form-control"
              placeholder="Vehicle Number" 
              required
              <% if (Object.keys(data).length != 0) { %>
                value="<%- data.number %>" readonly
              <% } %>
            >
          </div>

          <!-- RC Number -->
          <div class="col-md-6">
            <label for="rc_no" class="form-label">RC Number</label>
            <input 
              type="text" 
              id="rc_no" 
              name="rc_no" 
              class="form-control" 
              placeholder="RC Number"
              <% if (data) { %> value="<%- data.rc_no %>" <% } %>
            >
          </div>

          <!-- Chassis Number -->
          <div class="col-md-6">
            <label for="ch_no" class="form-label">Chassis Number</label>
            <input 
              type="text" 
              id="ch_no" 
              name="ch_no" 
              class="form-control" 
              placeholder="Chassis Number"
              <% if (data) { %> value="<%- data.chassis_no %>" <% } %>
            >
          </div>

          <!-- Engine Number -->
          <div class="col-md-6">
            <label for="en_no" class="form-label">Engine Number</label>
            <input 
              type="text" 
              id="en_no" 
              name="en_no" 
              class="form-control" 
              placeholder="Engine Number"
              <% if (data) { %> value="<%- data.engine_no %>" <% } %>
            >
          </div>

          <!-- Vehicle Type -->
          <div class="col-md-6">
            <label for="type" class="form-label">Vehicle Type</label>
            <input 
              type="text" 
              id="type" 
              name="type" 
              class="form-control" 
              placeholder="Vehicle Type"
              <% if (data) { %> value="<%- data.type %>" <% } %>
            >
          </div>

        </div>
      </div>

      <div class="card-footer text-end">
        <button type="submit" class="btn btn-success px-4">
          <i class="bi bi-check-circle me-1"></i> Submit
        </button>
      </div>
    </form>
  </div>
</div>
