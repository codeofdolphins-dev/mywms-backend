<div class="card shadow mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0 fs-5">Product List</h4>
        <a href="/product/add-Product" class="btn btn-primary btn-sm">Add Product</a>
    </div>

    <div class="card-body">
        <div class="table-responsive" style="font-size: small;">
            <table id="example" class="table table-striped table-bordered table-sm">
                <thead class="table-dark text-white">
                    <tr>
                        <th>SL.no</th>
                        <th>Name</th>
                        <th>Item HSN</th>
                        <th>Category</th>
                        <th>Sub Category</th>
                        <th>Brand</th>
                        <th>MRP</th>
                        <th>Barcode</th>
                        <th>L.Cost</th>
                        <th>AED</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.map((row, i)=> { %>
                        <tr>
                            <td>
                                <%= i + 1 %>
                            </td>
                            <td>
                                <%= row.item_name %>
                            </td>
                            <td>
                                <%= row.hsn_code %>
                            </td>
                            <td>
                                <%= row.category %>
                            </td>
                            <td>
                                <%= row.sub_category %>
                            </td>
                            <td>
                                <%= row.brand %>
                            </td>
                            <td>
                                <%= row.item_mrp !=null ? row.item_mrp.toFixed(2) : '' %>
                            </td>
                            <td>
                                <%= row.barcode %>
                            </td>
                            <td>
                                <%= row.landing_cost !=null ? row.landing_cost.toFixed(2) : '' %>
                            </td>
                            <td>
                                <%= row.aed !=null ? row.aed.toFixed(2) : '' %>
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <button type="button" class="btn btn-sm btn-danger btn-delete"
                                        data-id="<%= row.id %>">
                                        <i class="ti-trash"></i>
                                    </button>
                                    <a href="/product/edit-Product?id=<%= row.id %>" class="btn btn-sm btn-secondary">
                                        <i class="ti-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>