<div class="card shadow mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0 fs-5">Driver List</h4>
        <a href="/driver/addDriver" id="addDriver" class="btn btn-primary btn-sm">
            Add Driver
        </a>
    </div>

    <div class="card-body">
        <div class="table-responsive" style="font-size: small;">
            <table id="example" class="table table-striped table-bordered table-sm">
                <thead class="table-light">
                    <tr>
                        <th>Srl No.</th>
                        <th>Driver Name</th>
                        <th>license No.</th>
                        <th>Contact No.</th>
                        <th>Address</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.map((row, i)=> { %>
                        <tr>
                            <td>
                                <%= i + 1 %>
                            </td>
                            <td>
                                <%= row.name %>
                            </td>
                            <td>
                                <%= row.license_no %>
                            </td>
                            <td>
                                <%= row.contact_no %>
                            </td>
                            <td>
                                <%= row.address %>
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <button type="button" class="btn btn-sm btn-danger btn-delete"
                                        data-id="<%= row.id %>">
                                        <i class="ti-trash"></i>
                                    </button>
                                    <a href="/driver/editDriver?id=<%= row.id %>" class="btn btn-sm btn-secondary">
                                        <i class="ti-pencil"></i>
                                    </a>
                                </div>

                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>