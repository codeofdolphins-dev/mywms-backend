<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>
    <% if (title) { %>
      <%= title %>
    <% } %>
  </title>

  <!-- Favicon & Touch Icons -->
  <link rel="apple-touch-icon" sizes="144x144" href="http://placehold.it/144.png/000/fff">
  <link rel="apple-touch-icon" sizes="114x114" href="http://placehold.it/114.png/000/fff">
  <link rel="apple-touch-icon" sizes="72x72" href="http://placehold.it/72.png/000/fff">
  <link rel="apple-touch-icon" sizes="57x57" href="http://placehold.it/57.png/000/fff">

  <!-- Styles -->
  <link href="/assets/css/lib/font-awesome.min.css" rel="stylesheet" />
  <link href="/assets/css/lib/themify-icons.css" rel="stylesheet" />
  <link href="/assets/css/lib/owl.theme.default.min.css" rel="stylesheet" />
  <link href="/assets/css/lib/menubar/sidebar.css" rel="stylesheet" />

  <!-- âœ… Use Bootstrap 5 CDN or your file -->
  <link href="/assets/css/lib/bootstrap5.min.css" rel="stylesheet">

  <link href="/assets/css/lib/unix.css" rel="stylesheet" />
  <link href="/assets/css/style.css" rel="stylesheet" />

  <style>
    .sidebarUl {
      margin-top: 50px !important;
    }

    /* .swal2-show {
      font-size: 1.5rem !important;
    } */

    .swal2-confirm,
    .swal2-cancel {
      color: white !important;
    }

    .swal2-confirm:hover,
    .swal2-cancel:hover {
      color: white !important;
    }
  </style>

  <% if (head) { %>
    <%- head %>
  <% } %>
</head>

<body class="sidebar-hide">

  <!-- Sidebar -->
  <div class="sidebar sidebar-gestures">
    <div class="nano">
      <div class="nano-content">
        <ul class="sidebarUl">
          <li title="Warehouse">
            <a class="sidebar-sub-toggle">
              <i class="ti-home"></i>Warehouse
              <span class="sidebar-collapse-icon ti-angle-down"></span>
            </a>
            <ul>
              <li><a href="#">Warehouse List</a></li>
              <li><a href="#">Add Warehouse</a></li>
            </ul>
          </li>
          <li title="Product">
            <a class="sidebar-sub-toggle">
              <i class="ti-package"></i>Products
              <span class="sidebar-collapse-icon ti-angle-down"></span>
            </a>
            <ul>
              <li><a href="#">Product List</a></li>
              <li><a href="#">Add Product</a></li>
            </ul>
          </li>
          <li title="Inward"><a href="#" class="sidebar-sub-toggle"><i class="ti-import"></i>Inward</a></li>
          <li title="Outward"><a href="#" class="sidebar-sub-toggle"><i class="ti-export"></i>Outward</a></li>
          <li title="Role Permission">
            <a class="sidebar-sub-toggle">
              <i class="ti-lock"></i>Role Permission
              <span class="sidebar-collapse-icon ti-angle-down"></span>
            </a>
            <ul>
              <li><a href="/role">Role</a></li>
              <li><a href="/permission">Permission</a></li>
            </ul>
          </li>
          <li title="Vehicle"><a href="/vehicle"><i class="ti-truck"></i>Vehicle</a></li>
          <li title="Logout"><a href="/auth/logout"><i class="ti-close"></i> Logout</a></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Header -->
  <div class="header d-flex justify-content-between align-items-center px-3 py-2">
    <div class="d-flex align-items-center">
      <div class="logo">
        <a href="/"><span>MYWMS</span></a>
      </div>
      <div class="hamburger sidebar-toggle ms-3">
        <span class="line"></span>
        <span class="line"></span>
        <span class="line"></span>
      </div>
    </div>
    <div class="d-flex align-items-center">
      <img class="avatar-img rounded-circle"
        <% if (user && user.profile_image) { %>
        src="/assets/user/<%= user.profile_image %>"
        <% } else { %>
        src="/assets/images/avatar/dummyUser.webp"
        <% } %>
      alt="User" style="width: 40px; height: 40px;" />
      <span class="user-avatar ms-2">
        <% if (user) { %>
          <%= user.f_name %>
        <% } %> <i class="ti-angle-down f-s-10"></i>
      </span>
      <div class="drop-down dropdown-profile">
        <div class="dropdown-content-body">
          <ul>
            <li><a href="/company/updateCompany"><i class="ti-user"></i> <span>Update Profile</span></a></li>
            <li><a href="/auth/logout"><i class="ti-power-off"></i> <span>Logout</span></a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="content-wrap">
    <div class="main">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-8 p-0">
            <div class="page-header">
              <div class="page-title">
                <h1>Hello, <span><%= user ? (user.c_name || user.full_name) : '' %></span></h1>
              </div>
            </div>
          </div>
          <div class="col-lg-4 p-0">
            <div class="page-header">
              <div class="page-title">
                <ol class="breadcrumb text-end">
                  <li><a href="/">Dashboard</a></li>
                  <% if (title) { %>
                    <li class="active"><%= title %></li>
                  <% } %>
                </ol>
              </div>
            </div>
          </div>
        </div>

        <div id="main-content" class="mt-4">
          <%- body %>
        </div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="/assets/js/lib/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script src="/assets/js/sweetalert2@11.js"></script>
  <% if (typeof customeScript !== 'undefined') { %>
    <%- customeScript %>
  <% } %>

  <script src="/assets/js/lib/jquery.nanoscroller.min.js"></script>
  <script src="/assets/js/lib/menubar/sidebar.js"></script>
  <script src="/assets/js/lib/preloader/pace.min.js"></script>
  <script src="/assets/js/scripts.js"></script>

</body>

</html>